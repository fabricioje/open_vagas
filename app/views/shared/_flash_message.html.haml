- if flash.present?
  - if flash[:success].present?
    - @icon = 'success'
    - @tittle = 'Tudo certo!'
    - @message = flash[:success]
  - elsif flash[:error].present?
    - @icon = 'error'
    - @tittle = 'Erro'
    - @message = flash[:error]
  - else
    - @icon = 'success'
    - @tittle = 'Alerta'
    - @message = flash[:notice]

  :javascript
    Swal.fire({
      title: "#{@tittle}",
      text: "#{@message}",
      icon: "#{@icon}",
      confirmButtonText: 'OK!'
    })
